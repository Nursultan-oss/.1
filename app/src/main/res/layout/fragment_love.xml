<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoveFragment">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image_view1"
        android:src="@mipmap/kalkulater"
        android:scaleType="fitXY"
        android:layout_height="270dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/gettext"

        android:text="@string/history"
        android:textSize="24dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="388dp"
        android:layout_marginTop="25dp"
      android:id="@+id/linear_for_me"
        android:orientation="vertical"
        android:layout_height="110dp">


        <ImageView
            android:id="@+id/image_serdes"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:src="@mipmap/serdes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.488" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:id="@+id/text_view_you1"
            android:text="You"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_barabar"
            android:id="@+id/barabar"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="50dp"/>

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintRight_toLeftOf="@id/barabar"
            android:layout_marginRight="145dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:id="@+id/image100"
            android:src="@drawable/ic_fovorite"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_me1"
            android:text="Me"
            android:textSize="24dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>







</LinearLayout>



